<% if current_user.company_id != nil %>
	<%= content_for :body_id, "account" %>

	<div id="panel" class="profile">
		<h3>
			<strong>Profile settings</strong>
		</h3>

		<p class="intro">
			Change your account information, login credentials, etc.
		</p>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
	    <%= devise_error_messages! %>
	  	<div class="form-group">
	    	<label>First Name</label>
	    	<%= f.text_field :firstname, autofocus: true, class: "form-control" %>
			</div>
	  	<div class="form-group">
				<label>Last Name</label>
				<%= f.text_field :lastname, autofocus: true, class: "form-control" %>
			</div>
	    <div class="form-group">
				<label>Email Address</label>
				<%= f.email_field :email, autofocus: true, class: "form-control" %>
			</div>
			<div class="form-group">
				<label>New password</label>
				<%= f.password_field :password, autocomplete: "off", class:"form-control" %>
			</div>
			<div class="form-group">
				<label>Confirm new password</label>
				<%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
			</div>
			<div class="form-group action">
	      <%= f.submit "Save changes", class:"btn btn-success" %>
			</div>
		<% end %>

	  <p class="intro">
			Want to cancel your account?
		</p>
	  <%= button_to "Cancel my account", registration_path(resource_name), class:"btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %>

	</div>
<% else %>
	<%= content_for :body_id, "form" %>
	<h1 class="text-center">Welcome to Magic Mailroom</h1>

	<div class="content-wrapper text-center">

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: "form", class:"form-horizontal", method: :put }) do |f| %>
			<%= devise_error_messages! %>

			<div class="description">
				<h4>
					Before you can start using our service you need either to:<br><br>
					<strong>1.</strong> Join an existing company using a company code or<br><br>
					<strong>2.</strong> Create a new company.
				 </h4>
			</div>

			<div class="form-group">
				<label class="col-sm-4 col-md-4 control-label text-right">Company Code</label>
				<div class="col-sm-6 col-md-6">
					<%= f.text_field :company_code, autofocus: true, class: "form-control", id:"company-code", placeholder: "Example:   80e81c85-c9f0-4f55-be4c-5c627c2e31d9" %>
				</div>
			</div>

			<div class="form-actions">
				<%= f.submit "Submit this Company Code", class:"btn btn-primary btn-lg" %>
				<%= link_to "Create a New Company", new_company_path, class:"btn btn-success btn-lg" %>
			</div>
		<% end %>
	</div>
<% end %>
