<%= content_for :body_id, "account" %>

<%= form_tag(deliveries_path, method: :post, class:"form-horizontal") do %>
  <% if !@delivery.nil? && @delivery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@delivery.errors.count, "error") %> prohibited this delivery from being sent:</h2>

      <ul>
      <% @delivery.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if !@resident.nil? && @resident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resident.errors.count, "error") %> prohibited this delivery from being sent:</h2>

      <ul>
      <% @resident.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-2"><label class="control-label">Apartment Numbers</label></div>
    <div class="col-sm-10">
      <%= text_area_tag :apartment_number, "", class: "form-control", placeholder: "Seperate apartment numbers with commas and no spaces", rows: 6 %>
    </div>
	</div>

  <div class="form-group form-actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "You have a delivery!", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
