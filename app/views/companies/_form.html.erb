<%= content_for :body_id, "account" %>

<%= form_for(@company, html: {class:"form-horizontal"}) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if action_name == "edit" %>
    <div class="form-group">
      <label class="col-sm-2 col-md-2 control-label">Company Code</label>
      <div class="col-sm-10 col-md-10">
        <p class="cushion"><%= @company.company_code %></p>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 col-md-2 control-label">Company Name</label>
    <div class="col-sm-10 col-md-10">
      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "E.G. 'Riverside Apartment Building' or just 'Riverside'." %>
    </div>
	</div>

  <% if action_name == "edit" %>
    <br>
    <h4><strong>Edit your Custom Email Notification</strong></h4>
    <br>
    <div class="form-group">
      <label class="col-sm-2 col-md-2 control-label">Email Subject Line</label>
      <div class="col-sm-10 col-md-10">
        <%= f.text_field :email_subject_line, autofocus: true, class: "form-control" %>
      </div>
  	</div>

    <div class="form-group">
      <label class="col-sm-2 col-md-2 control-label">Email Title</label>
      <div class="col-sm-10 col-md-10">
        <%= f.text_field :email_title, autofocus: true, class: "form-control" %>
      </div>
  	</div>

    <div class="form-group">
      <label class="col-sm-2 col-md-2 control-label">Email Body</label>
      <div class="col-sm-10 col-md-10">
        <%= f.text_area :email_body, autofocus: true, class: "form-control", rows: 6 %>
      </div>
  	</div>

    <div class="form-group form-actions">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Save Company and Email Template", class:"btn btn-primary" %>
        <%= link_to "Back", root_path, class:"btn btn-default" %>
        <%= link_to 'Delete', @company, method: :delete, data: { confirm: 'Are you sure? This will remove all your saved residents and deliveries' }, class: "btn btn-danger" %>
      </div>
    </div>
  <% else %>

    <div class="form-group form-actions">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Save Company", class:"btn btn-primary" %>
        <%= link_to "Back", root_path, class:"btn btn-default" %>
      </div>
    </div>

  <% end %>

<% end %>
